{
	"name": "@kamado-io/page-compiler",
	"version": "1.3.0",
	"description": "Page compiler for Kamado",
	"author": "D-ZERO Co., Ltd.",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./dist/page-compiler.js",
	"types": "./dist/page-compiler.d.ts",
	"exports": {
		".": {
			"types": "./dist/page-compiler.d.ts",
			"default": "./dist/page-compiler.js"
		},
		"./format": {
			"types": "./dist/format.d.ts",
			"default": "./dist/format.js"
		},
		"./transform/inject-to-head": {
			"types": "./dist/transform/inject-to-head.d.ts",
			"default": "./dist/transform/inject-to-head.js"
		},
		"./transform/ssi-shim": {
			"types": "./dist/transform/ssi-shim.d.ts",
			"default": "./dist/transform/ssi-shim.js"
		},
		"./dev-transform/inject-to-head": {
			"types": "./dist/transform/inject-to-head.d.ts",
			"default": "./dist/transform/inject-to-head.js"
		},
		"./dev-transform/ssi-shim": {
			"types": "./dist/transform/ssi-shim.d.ts",
			"default": "./dist/transform/ssi-shim.js"
		}
	},
	"scripts": {
		"build": "tsc --project tsconfig.build.json",
		"dev": "tsc --watch --project tsconfig.build.json"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@d-zero/shared": "0.17.1",
		"ansi-colors": "4.1.3",
		"character-entities": "2.0.2",
		"fast-glob": "3.3.3",
		"html-minifier-terser": "7.2.0",
		"image-size": "2.0.2",
		"jsdom": "27.4.0",
		"kamado": "1.3.0",
		"prettier": "3.8.1"
	},
	"devDependencies": {
		"@types/html-minifier-terser": "7.0.2",
		"@types/jsdom": "27.0.0",
		"typescript": "5.9.3"
	}
}
